import java.util.ArrayList;
class ArrList {
    public static void main(String[] args) {
        //Creating an ArrayList;
    ArrayList<Integer>  list = new ArrayList<Integer>();

    // Adding elements to the ArrayList;
        list.add(0);
        list.add(2);
        list.add(4);
        list.add(6);

        // Adding an  element in between  the ArrayList;
        list.add(2,3);
        list.add(1,13);

        System.out.println("Before Replacement  Array list ");
        System.out.println(list);

            // Replacing an element in Array list;
         list.set(2,55);
         list.set(1,77);
         list.set(4,102);

         System.out.println("New Replaced ArrayList");
         System.out.println(list);

    }


    }
